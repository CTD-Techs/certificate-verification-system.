# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=change_this_password_in_production
DB_NAME=cert_verification

# Backend Configuration
PORT=3000

# JWT Configuration
JWT_SECRET=change_this_secret_key_in_production_use_long_random_string
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://your-ec2-ip:5151

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://your-ec2-ip:8156
VITE_API_BASE_URL=http://your-ec2-ip:8156/api/v1

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=info