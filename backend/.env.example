# Server Configuration
NODE_ENV=development
PORT=3000
# Note: In production (Docker), the backend runs on port 3000 internally
# but is exposed on port 8156 via docker-compose port mapping
API_VERSION=v1

# Database Configuration
DB_HOST=postgres1.czym66euwfct.ap-south-1.rds.amazonaws.com
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=ctd123456
DB_NAME=cert_verification
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=certificate-verification-documents

# AWS Textract Configuration
AWS_TEXTRACT_ENABLED=true
AWS_TEXTRACT_MOCK_MODE=false

# AWS Bedrock Configuration
AWS_BEDROCK_ENABLED=true
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_BEDROCK_MOCK_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Mock)
EMAIL_FROM=noreply@example.com
EMAIL_MOCK_MODE=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Mock Service Configuration
MOCK_MODE=true
MOCK_SUCCESS_RATE=0.95
MOCK_RESPONSE_DELAY_MIN=500
MOCK_RESPONSE_DELAY_MAX=2000
MOCK_ERROR_RATE=0.05

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# Note: In production, set to http://your-ec2-ip:5151

# Security
BCRYPT_ROUNDS=10